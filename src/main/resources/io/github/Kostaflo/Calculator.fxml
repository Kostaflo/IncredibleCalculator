<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/21"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.Kostaflo.CalculatorController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <TextField fx:id="display" alignment="CENTER_RIGHT" editable="false" prefHeight="70.0"
    prefWidth="300.0" text="0" GridPane.columnSpan="4">
    <font>
      <Font size="30.0" />
    </font>
  </TextField>

  <Button onAction="#handleClear" prefHeight="60.0" prefWidth="230.0" text="C"
    GridPane.columnSpan="3" GridPane.rowIndex="1">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleOperator" prefHeight="60.0" prefWidth="70.0" text="/"
    GridPane.columnIndex="3" GridPane.rowIndex="1">
    <font>
      <Font size="20.0" />
    </font>
  </Button>

  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="7" GridPane.rowIndex="2">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="8"
    GridPane.columnIndex="1" GridPane.rowIndex="2">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="9"
    GridPane.columnIndex="2" GridPane.rowIndex="2">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleOperator" prefHeight="60.0" prefWidth="70.0" text="*"
    GridPane.columnIndex="3" GridPane.rowIndex="2">
    <font>
      <Font size="20.0" />
    </font>
  </Button>

  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="4" GridPane.rowIndex="3">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="5"
    GridPane.columnIndex="1" GridPane.rowIndex="3">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="6"
    GridPane.columnIndex="2" GridPane.rowIndex="3">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleOperator" prefHeight="60.0" prefWidth="70.0" text="-"
    GridPane.columnIndex="3" GridPane.rowIndex="3">
    <font>
      <Font size="20.0" />
    </font>
  </Button>

  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="1" GridPane.rowIndex="4">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="2"
    GridPane.columnIndex="1" GridPane.rowIndex="4">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="3"
    GridPane.columnIndex="2" GridPane.rowIndex="4">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleOperator" prefHeight="60.0" prefWidth="70.0" text="+"
    GridPane.columnIndex="3" GridPane.rowIndex="4">
    <font>
      <Font size="20.0" />
    </font>
  </Button>

  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="150.0" text="0"
    GridPane.columnSpan="2" GridPane.rowIndex="5">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleDigit" prefHeight="60.0" prefWidth="70.0" text="."
    GridPane.columnIndex="2" GridPane.rowIndex="5">
    <font>
      <Font size="20.0" />
    </font>
  </Button>
  <Button onAction="#handleEquals" prefHeight="60.0" prefWidth="70.0" text="="
    GridPane.columnIndex="3" GridPane.rowIndex="5">
    <font>
      <Font size="20.0" />
    </font>
  </Button>

</GridPane>
